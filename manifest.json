{
  "name": "HTSP",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Help Tools Side Panel",
  "host_permissions": [
    "*://*.openai.com/*",
    "*://*.chatgpt.com/*",
    "*://*.google.com/*",
    "*://*.googleusercontent.com/*",
    "https://www.googletagmanager.com/*",
    "*://*.gstatic.com/*",
    "*://accounts.google.com/*",
    "*://gemini.google.com/*"
  ],
  "permissions": [
    "declarativeNetRequest",
    "sidePanel",
    "tabs",
    "tabGroups",
    "storage"
  ],
  "icons": {
    "128": "images/icon.png",
    "16": "images/icon.png"
  },
  "action": {
    "default_title": "HTSP"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html",
    "minimum_width": 324
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src 'self' https://*.openai.com/ https://*.chatgpt.com/ https://chatgpt.com/ https://gemini.google.com/ https://accounts.google.com/ https://www.google.com/;"
  }
}
